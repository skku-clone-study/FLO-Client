<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/lt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40sp"
        android:text="로그인"
        android:textColor="@color/gray_400"
        android:textSize="25sp" />

    <android.widget.Button
        android:id="@+id/lb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lt"
        android:layout_marginBottom="10sp"
        android:background="#FFE600"
        android:drawableStart="@drawable/ic_kakao_logo"
        android:paddingStart="20sp"
        android:paddingTop="5sp"
        android:paddingEnd="20sp"
        android:paddingBottom="5sp"
        android:text="카카오톡으로 간편로그인" />

    <android.widget.Button
        android:id="@+id/lb2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb1"
        android:layout_marginBottom="20sp"
        android:background="#FFE600"
        android:drawableStart="@drawable/ic_kakao_logo"
        android:paddingStart="20sp"
        android:paddingTop="5sp"
        android:paddingEnd="20sp"
        android:paddingBottom="5sp"
        android:text="다른 카카오계정으로 로그인" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lb2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:background="@drawable/kakao_stroke_oval"
        android:onClick="mOnClose"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        android:tint="@color/white" />

</RelativeLayout>
