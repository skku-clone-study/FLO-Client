<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StreamingActivity"
    android:background="@color/black">
    <include layout="@layout/streaming_header" android:id="@+id/streaming_header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/streaming_header"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:tint="@color/gray_100"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/streaming_header"
        app:layout_constraintBottom_toTopOf="@+id/musicBar"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="7dp"
            android:id="@+id/streaming_title"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="25sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:id="@+id/streaming_artist"/>
            <ImageButton
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_next_arrow"
                android:tint="@color/gray_600"
                android:layout_marginStart="5sp" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="7dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/frag_chart_list_item_img_sample"
                android:id="@+id/streaming_albumcover"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lyrics_now"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="@color/white"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/lyrics_next"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:textColor="@color/gray_400"
                android:textAlignment="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/streaming_seekbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="10dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_like"
                android:background="@android:color/transparent"
                android:tint="@color/gray_400"
                android:layout_marginEnd="40dp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_traffic_signal"
                android:background="@android:color/transparent"
                android:tint="@color/gray_400"/>
        </LinearLayout>
    </LinearLayout>
    <SeekBar
        android:id="@+id/streaming_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/musicTimeBar"
        android:progressDrawable="@drawable/seekbar"
        android:thumb="@android:color/transparent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/musicTimeBar"
        app:layout_constraintBottom_toTopOf="@id/musicBar"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <TextView
            android:id="@+id/streaming_runningtime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="00:00"
            android:textColor="@color/gray_600"/>
        <TextView
            android:id="@+id/streaming_fulltime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="00:00"
            android:textColor="@color/gray_600"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/musicBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/streaming_footer"
        android:orientation="horizontal"
        android:weightSum="5"
        android:gravity="center"
        android:paddingTop="13sp"
        android:paddingBottom="13sp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_repeat"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_previous_track"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/streaming_handle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_button_big"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_skip_track"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shuffle_arrows"
            android:background="@android:color/transparent"
            android:tint="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>
    <include layout="@layout/streaming_footer" android:id="@+id/streaming_footer"/>
</androidx.constraintlayout.widget.ConstraintLayout>