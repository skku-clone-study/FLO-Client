<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인터넷 연결 확인 후 다시 시도해주세요."
            android:textColor="@color/gray_600"
            android:textSize="16sp" />

        <android.widget.Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_rounded_flo_blue_stroke"
            android:text="재시도"
            android:textColor="@color/flo_blue"
            android:textSize="16.5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="기기에 저장한 음악은\n[보관함 > 저장한 곡]에서\n데이터를 사용하지 않고 감상할 수 있습니다."
            android:textAlignment="center"
            android:textColor="@color/gray_600"
            android:textSize="16sp" />

        <android.widget.Button
            android:layout_width="155dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_rounded_flo_blue_stroke"
            android:text="보관함 바로가기"
            android:textColor="@color/flo_blue"
            android:textSize="16.5sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>