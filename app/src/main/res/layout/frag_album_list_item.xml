<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/artist_album_thumbnail"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/frag_chart_list_item_img_sample"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/artist_album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Celebrity"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/artist_album_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="아이유(IU)"
        android:textColor="@color/gray_600"/>
    <TextView
        android:id="@+id/artist_album_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="2021.01.27 | 싱글"
        android:textColor="@color/gray_600"
        android:paddingBottom="20dp"/>
</LinearLayout>