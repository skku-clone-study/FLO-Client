<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/gray_800</item>
        <item name="android:paddingBottom">20sp</item>
        <item name="android:paddingTop">20sp</item>
        <item name="android:textCursorDrawable">@color/gray_900</item>
        <item name="android:background">@drawable/edittext_bot_line</item>
    </style>
    <style name="RoundCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4sp</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:onClick">onRadioButtonClicked</item>
        <item name="android:paddingStart">15sp</item>
        <item name="android:paddingBottom">10sp</item>
        <item name="android:paddingTop">10sp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_open</item>
        <item name="android:windowExitAnimation">@anim/popup_close</item>
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_percent">0.95</item>
    </style>
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/white</item>
    </style>
</resources>